    <script type="text/javascript">
        //绑定用户名称
        $.post("/Personal/Personal/BindingName", function (data) {
            $("#UserName").val(data.UserName);
        });
        //注册会员
        $("#ZhuCe").click(function () {
            var fordate = $("#ZhuCeForm").serializeArray();
            $.post("/Personal/Personal/InsertVIP", fordate, function (data) {
                if (data == "success") {
                    alert("提交成功，请等待审核");
                }
                else if (data == "Exist") {
                    alert("你已经是会员!是否续费");
                   
                } else if (data == "NoMoney") {
                    alert("余额不足！请及时充值");

                }
                else {
                    alert("提交失败");
                }
            });
        });
       //查询会员信息
        $("#BtnSelect").click(function () {
            $.getJSON("/Personal/Personal/SelectVIP", function (data) {
                    $("#CUserName").val(data.TrueName);
                    $("#CStartTime").val(data.StartTime);
                    $("#CVipDeadline").val(data.VipDeadline);
                    $("#CEndTime").val(data.EndTime);
                    $("#InsertInfor").modal("show");
            });

        });

        $("#btnXuFei").click(function () {
            layer.confirm("你确定要续费吗？", {
                icon: 3,
                btn: ['确定', '取消']
            }, function (layerIndex) {
                layer.close(layerIndex);//关闭提示框
                var fordata = $("#InsertForm").serializeArray();
                $.post("/Personal/Personal/UpdataVIp", fordata, function (data) {
                    if (data == "success") {
                        alert("续费成功");
                        $("#UpdataInfor").modal("hide");
                    } else if (data == "Noshenhe") {
                        alert("Vip正在审核，不能续费");
                        $("#UpdataInfor").modal("hide");
                    } else if (data = "NoMoney") {
                        alert("你的余额不足，请及时充值");
                        $("#UpdataInfor").modal("hide");
                    } else {
                        alert("续费失败");
                    }
                });
            });
        });
    </script>

