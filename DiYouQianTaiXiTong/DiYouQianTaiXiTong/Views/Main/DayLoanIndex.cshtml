    <script type="text/javascript">

            $(document).ready(function () {

                //还款方式
                $.post("/Loan/Loan/RePaymentWay", function (data) {
                    selectLoadData("RepaymentWayID", data);
                });
                //信用标借款期限
                $.post("/Loan/Loan/SelectLoanDeadline", function (data) {
                    selectLoadData("XLoanDeadlineID", data);
                });

            });

        //借款金额的限制
            $("#LoanMoney").change(function () {
                var LoanMoney = $("#LoanMoney").val();

                if (LoanMoney < 1000)
                {
                    layer.alert('你输入的金额不能低于1000!', { icon: 2, title: '提示' });
                    $("#LoanMoney").val("");
                }
                if (LoanMoney > 200000)
                {
                    layer.alert('你输入的金额不能超过20万!', { icon: 2, title: '提示' });
                    $("#LoanMoney").val("");
                }
            })

        //年利率的限制
            $("#Rate").change(function () {
                var Rate = $("#Rate").val();
                if (Rate < 5.00)
                {
                    layer.alert('年利率不在范围之内!', { icon: 0, title: '提示' });
                    $("#Rate").val("");
                }
                if (Rate > 24.00)
                {
                     layer.alert('年利率不在范围之内!', { icon: 0, title: '提示' });
                    $("#Rate").val("");
                }
            });

            //提交信用标
            $("#Submit").click(function () {
                layer.confirm("确定要发布此标？", {
                    icon: 3,
                    btn: ['确定', '取消']
                }, function (layerIndex) {
                    layer.close(layerIndex);//关闭提示框
                    var fordate = $("#InsertForm").serializeArray();
                    $.post("/Loan/Loan/InsertTianTreeTop", fordate, function (data) {
                        if (data == "success") {
                            layer.alert("发布成功,等待审核！", { icon: 1, title: '提示' }, function (layerIndex) {
                                window.location.href = "/Main/BorrowIndex";
                            });
                        } else if (data == "validCodefail")
                        {
                            layer.alert('验证码错误', { icon: 2, title: '提示' });
                            $("#validCode").val("");
                            reloadValideImage();
                        } else if (data == "validCodefailNull") {
                            layer.alert('验证码错误', { icon: 3, title: '提示' });
                        } else {
                            layer.alert('发布失败', { icon: 2, title: '提示' });
                        }
                    })
                });
            });
            //验证码刷新方法
            function reloadValideImage() {
                document.getElementById("ValidateCode").src = '/Main/ValideCode?ts=' + new Date().getTime();
            }
            $("#Back").click(function () {
                window.location.href = "/Main/BorrowIndex";
            })
    </script>
