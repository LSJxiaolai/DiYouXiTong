            var monthIncome = $("#txtMonthIncome").val();
            var socialSecurity = $("#txtSocialSecurity").val();
            var housingCondition = $("#txthousingCondition").val();
            var whetherBuyCar = $("#txtWhetherBuyCar").val();
            var ForDate = $("#InEmployeeForm").serializeArray();
            if (userName != null && trueName != null 
                && phoneNumber != null && sex != null && bornDate != null
                && nativePlace != null && marriageState != null
                && issue != null && educationalBackground != null
                && monthIncome != null && socialSecurity != null
                && housingCondition != null && whetherBuyCar != null) {
                $.post("/Personal/Personal/InsertMessage", ForDate, function (data) {
                    if (data == "success") {
                        layer.alert("保存成功", { icon: 0, title: '提示' });
                        location.reload();
                        window.location.href = "/Main/BaseIndex";
                    } else if (data == "NoID") {
                        alert("身份证号不存在");
                    } else if (data == "Exist") {
                        alert("填写资料成功");
                        location.reload();
                    } else {
                        layer.alert("填写失败", { icon: 0, title: '提示' });
                    }
                })
            }
            else {
                alert("请填写完资料");
            }
        })
