    <script type="text/javascript">


        $(document).ready(function () {
            $.post("/Personal/Personal/SelectBankName", function (data) {
                selectLoadData("PayTypeID", data);
            });
            $.post("/Personal/Personal/SelectProvince", function (data) {
                selectLoadData("ProID", data);
            });
        });
        $(document).ready(function () {
            $.post("/Main/sesssinoselect", function (data) {
                if (data == "success") {
                    $("div").remove("#yuanlaiID");
                }
                else {
                    $("div").remove("#userviweID");
                }
            });
        });
        //通过选择省份选择城市
        $("#ProID").click(function () {
            var proID = $("#ProID").val();
            $.post("/Personal/Personal/SelectCity", { proID: proID }, function (data) {
                selectLoadData("CityID", data);
            });
        });
        //添加银行卡
        $("#Submit").click(function () {
                var fordata = $("#UpdateForm").serializeArray();
                $.post("/Personal/Personal/InsertAccount", fordata, function (data) {
                    if (data == "success")
                    {
                        layer.alert("添加成功", { icon: 1, title: '提示' }, function (layerIndex) {
                            layer.close(layerIndex);
                            window.location.href = "/Personal/Personal/CreditCardMessage";
                        });
                    }
                    else if (data == "Eixst")
                    {
                        layer.alert("只能添加一个银行账号", { icon: 0, title: '提示' }, function (layerIndex) {
                            layer.close(layerIndex);
                            window.location.href = "/Personal/Personal/CreditCardMessage";
                        });
                    }
                    else if (data == "BankAccountFail")
                    {
                        layer.alert("银行账号格式不正确", { icon: 2, title: '提示' }, function (layerIndex) {
                            layer.close(layerIndex);
                            window.location.href = "/Personal/Personal/CreditCardMessage";
                        });
                    } else
                    {
                        layer.alert("添加失败", { icon: 2, title: '提示' });
                    }
                });
             });
    </script>
