    <script>

        var wholewithdrawdeposit;
        var tabinreview;
        var tabRechargesuccessfully;
        var tabRechargefailed;
        var tabUserRechargefailed;

        var releaseTime = "1017-08-08 00:00:00.000";
        var EnReleaseTime = "4017-08-08 00:00:00.000";
        var LoantitleID = "";
        var TreetoptypeID = 0;
        var UserNameID = "";
        $(document).ready(function () {
            //标种绑定
            $.post("/BorroworlMoneymanage/BorroworlMoney/SelcttbTreetoptype", function (jsonData) {
                selectLoadData("TreetoptypeID", jsonData);
            });
            $.post("/BorroworlMoneymanage/BorroworlMoney/SelcttbTreetoptype", function (jsonData) {
                selectLoadData("DfTreetoptypeID", jsonData);
            });         
                       
            //网站垫付明细账 状态
            $.post("/BorroworlMoneymanage/BorroworlMoney/selectStatusstr", function (jsonData) {
                selectLoadData("webStatusID", jsonData);
            });
            wholewithdrawdeposit = $.fn.bsgrid.init('wholewithdrawdeposit', {
                url: '/BorroworlMoneymanage/BorroworlMoney/selectoverdueloan',
                autoLoad: true,//自动加载数据
                stripeRows: true,//隔行变色
                rowHoverColor: true,//划过行变色
                rowSelectedColor: true,//是否显示选中行背景色
                pageSize: 10,//默认页面大小
                pageSizeSelect: true,//是否选择分页页数下拉框
                pagingLittleToolbar: true,//精简的图标按钮分页工具条
                pagingToolbarAlign: "left"//分页工具条的显示位置
            });
            wholewithdrawdeposit.search("LoantitleID=" + LoantitleID + "&UserNameID=" + UserNameID + "&TreetoptypeID=" + TreetoptypeID + "&releaseTime=" + releaseTime + "&EnReleaseTime=" + EnReleaseTime);

            $("#bulletinid").hide();
            $("#ruleid").hide();
            $("#threeid").hide();

        });

        //权限访问
        $("#containerid").mouseenter(function () {
            $.post("/LoginMain/MoKuaiQuanXianOpTypeSelect", function (Data) {
                for (var i = 0; i < Data.length; i++) {
                    if (Data[i].Name == "逾期借款" && Data[i].Optype == "垫付") {
                        $(".dianfumoney").removeClass("hidden");
                        $(".fdianfumoney").removeClass("hidden");
                        
                    }
                    if (Data[i].Name == "逾期借款" && Data[i].Optype == "查询") {
                        $("#bulletinid").show();
                        $("#ruleid").show();
                        $("#threeid").show();
                    }
                }
            });
        });


        $("#btnSelect").click(function () {
            var LoantitleID = $("#LoantitleID").val();
            var UserNameID = $("#UserNameID").val();
            var TreetoptypeID = $("#TreetoptypeID").val();
            if (TreetoptypeID == undefined || TreetoptypeID == "") {
                TreetoptypeID = 0;
            }
            releaseTime = $("#SReleaseTime").val() + " 00:00:00.000";
            EnReleaseTime = $("#EnReleaseTime").val() + " 00:00:00.000";
            wholewithdrawdeposit.search("LoantitleID=" + LoantitleID + "&UserNameID=" + UserNameID + "&TreetoptypeID=" + TreetoptypeID + "&releaseTime=" + releaseTime + "&EnReleaseTime=" + EnReleaseTime);
        });

        //网站垫付
        function binreview() {
            document.getElementById("rule").style.visibility = "visible"
            if (tabinreview == null) {
                tabinreview = $.fn.bsgrid.init('tabinreview', {
                    url: '/BorroworlMoneymanage/BorroworlMoney/selectoverdueadvance',
                    autoLoad: true,//自动加载数据
                    stripeRows: true,//隔行变色
                    rowHoverColor: true,//划过行变色
                    rowSelectedColor: true,//是否显示选中行背景色
                    pageSize: 10,//默认页面大小
                    pageSizeSelect: true,//是否选择分页页数下拉框
                    pagingLittleToolbar: true,//精简的图标按钮分页工具条
                    pagingToolbarAlign: "left"//分页工具条的显示位置
                });
                if (TreetoptypeID == undefined || TreetoptypeID == "") {
                    TreetoptypeID = 0;
                }
                tabinreview.search("LoantitleID=" + LoantitleID + "&UserNameID=" + UserNameID + "&TreetoptypeID=" + TreetoptypeID + "&releaseTime=" + releaseTime + "&EnReleaseTime=" + EnReleaseTime);
            }
            else {
                tabinreview = tabinreview;
                if (TreetoptypeID == undefined || TreetoptypeID == "") {
                    TreetoptypeID = 0;
                }
                tabinreview.search("LoantitleID=" + LoantitleID + "&UserNameID=" + UserNameID + "&TreetoptypeID=" + TreetoptypeID + "&releaseTime=" + releaseTime + "&EnReleaseTime=" + EnReleaseTime);
            }
            $(".bsgridPagingOutTab").css("min-width", "98%");
        }
        $("#DfbtnSelect").click(function () {
            var LoantitleID = $("#DfLoantitleID").val();
            var UserNameID = $("#DfUserNameID").val();
            var TreetoptypeID = $("#DfTreetoptypeID").val();
            if (TreetoptypeID == undefined || TreetoptypeID == "") {
                TreetoptypeID = 0;
            }
            releaseTime = $("#DfReleaseTime").val() + " 00:00:00.000";
            EnReleaseTime = $("#DfEnReleaseTime").val() + " 00:00:00.000";
            tabinreview.search("LoantitleID=" + LoantitleID + "&UserNameID=" + UserNameID + "&TreetoptypeID=" + TreetoptypeID + "&releaseTime=" + releaseTime + "&EnReleaseTime=" + EnReleaseTime);
        });
        //网站垫付明细账
        function rechargesuccessfully() {
            document.getElementById("three").style.visibility = "visible"
            if (tabRechargesuccessfully==null) {
                tabRechargesuccessfully = $.fn.bsgrid.init('tabRechargesuccessfully', {
                    url: '/BorroworlMoneymanage/BorroworlMoney/selectoverdueadvancemingxizhang',
                    autoLoad: true,//自动加载数据
                    stripeRows: true,//隔行变色
                    rowHoverColor: true,//划过行变色
                    rowSelectedColor: true,//是否显示选中行背景色
                    pageSize: 10,//默认页面大小
                    pageSizeSelect: true,//是否选择分页页数下拉框
                    pagingLittleToolbar: true,//精简的图标按钮分页工具条
                    pagingToolbarAlign: "left"//分页工具条的显示位置
                });
             
                var TreetoptypeID = $("#webStatusID").val();
                if (TreetoptypeID == undefined || TreetoptypeID == "") {
                    TreetoptypeID = 0;
                }
                tabRechargesuccessfully.search("TreetoptypeID=" + TreetoptypeID + "&releaseTime=" + releaseTime + "&EnReleaseTime=" + EnReleaseTime);
                tabRechargesuccessfully.refreshPage();
            }
            else {
                tabRechargesuccessfully = tabRechargesuccessfully;
                var TreetoptypeID = $("#webStatusID").val();
                if (TreetoptypeID == undefined || TreetoptypeID == "") {
                    TreetoptypeID = 0;
                }
                tabRechargesuccessfully.search("TreetoptypeID=" + TreetoptypeID + "&releaseTime=" + releaseTime + "&EnReleaseTime=" + EnReleaseTime);
                tabRechargesuccessfully.refreshPage();
            }
            $(".bsgridPagingOutTab").css("min-width", "98%");
        }      
        //全部查询
        $("#webbtnSelect").click(function () {
            var TreetoptypeID = $("#webStatusID").val();
            if (TreetoptypeID == undefined || TreetoptypeID == "") {
                TreetoptypeID = 0;
            }
            releaseTime = $("#webReleaseTime").val() + " 00:00:00.000";
            EnReleaseTime = $("#webEnReleaseTime").val() + " 00:00:00.000";
            tabRechargesuccessfully.search("TreetoptypeID=" + TreetoptypeID + "&releaseTime=" + releaseTime + "&EnReleaseTime=" + EnReleaseTime);
        });
               
        //自定网站垫付详情列
        function selectViewButton(record, rowIndex, colIndex, options) {
            var dianfu = tabinreview.getColumnValue(rowIndex, "Treetoptype");
            var yiqi = tabinreview.getColumnValue(rowIndex, "YuQiTianShu");
            if (dianfu != "信用标" && dianfu != "担保标") {
                return '<button type="button" class="dianfumoney btn btn-warning hidden" onclick="openselect(' + record.OverdueLoanID + ')">垫付</button>'
            } else if ((dianfu == "信用标" || dianfu == "担保标") && yiqi >= "30天")
            {
                return '<button type="button" class="fdianfumoney btn btn-warning hidden" onclick="openselect(' + record.OverdueLoanID + ')">垫付</button>'
            } else {
                return '<p>—</p>'
            }        
        }
        
        //网站垫付
        function openselect(OverdueLoanID) {
            $.post("/BorroworlMoneymanage/BorroworlMoney/selectwebadvance", { OverdueLoanID: OverdueLoanID }, function (data) {
                loadDatatoForm("selectloan", data);
            });
            $("#modselect").modal("show");
        }     
        //网站垫付
        $("#updataadvance").click(function () {
            var formDate = $("#selectloan").serializeArray();
            $.post("/BorroworlMoneymanage/BorroworlMoney/QueRenadvance", formDate, function (msg) {
                    if (msg == "success") {
                        layer.alert('垫付成功', { icon: 6, title: '提示' });
                        //关闭公告类型模态窗体
                        $("#modselect").modal("hide");
                        //刷新table
                        tabinreview.refreshPage();
