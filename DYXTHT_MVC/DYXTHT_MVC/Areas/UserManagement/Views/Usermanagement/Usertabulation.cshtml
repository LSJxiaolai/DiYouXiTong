
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.bsgrid-1.37/merged/bsgrid.all.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.bsgrid-1.37/css/skins/grid_bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.bsgrid-1.37/css/skins/grid_sky_blue.min.css" rel="stylesheet" />

    <title>Usertabulation</title>
    <style type="text/css">
        .container {
            width: 100%;
            padding: 20px 40px 0 35px;
            margin: 0;
        }

        .panel-heading span {
            font-size: 18px;
        }

        .form-horizontal label {
            font-weight: normal;
        }

        .reset {
            padding-left: 5px;
            padding-right: 5px;
        }

        .panel-body {
            padding-left: 0;
            background: #f4fcff;
        }

        td a {
            color: blue !important;
        }

        th {
            font-weight: normal;
        }

        .h4, td, th {
            text-align: center;
        }

        .table tbody tr td {
            padding: 4px;
        }

            .table tbody tr td button {
                height: 24px;
                padding: 2px 12px;
            }

        .modal-body {
            background: #f4fcff;
        }
    </style>
</head>
<body>
    <div class="container" id="containerid">
        <div class="row">
            <div class="panel panel-info">
                <div class="panel-body" style="padding-left:15px;">
                    <div class="row setPadding" style="background:#ffffff;">
                        <label class="col-md-1">用户列表</label>
                        <div class="col-lg-11 col-md-11 col-sm-11" id="Userlogintimeid">
                            <form class="form-horizontal" role="form">
                                <div class="form-group" style="margin-bottom:0;">
                                    <label class="col-md-6 col-sm-6 control-label reset">用户名：</label>
                                    <div class="col-md-2 col-sm-2 reset">
                                        <input type="text" class="form-control" name="UserName" id="UserNameID">
                                    </div>
                                    <label class="col-md-1 col-sm-1 control-label reset">邮箱：</label>
                                    <div class="col-md-2 col-sm-2 reset">
                                        <input type="text" class="form-control" name="PostBox" id="PostBoxID">
                                    </div>
                                    <button class="btn btn-primary" type="button" id="btnSelect"><span class="glyphicon glyphicon-search"></span>搜索</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <table id="Userlogintime">
                        <tr>
                            <th w_num="total_line" width="5%">序号</th>
                            <th w_index="UserLoginDetailID" w_hidden="true">ID</th>
                            <th w_index="UserName" width="10%">用户</th>
                            <th w_index="PostBox" width="10%">邮箱</th>
                            <th w_index="LoginFrequency" width="10%">登录次数</th>
                            <th w_index="StrRegisterTime" width="10%">注册时间</th>
                            <th w_index="StrlastLoginTime" width="10%">上次登录时间</th>
                            <th w_index="lastLoginIP" width="10%">上次登录IP</th>
                            <th w_index="StrEndLoginTime" width="10%">最后登录时间</th>
                            <th w_index="EndLogin" width="10%">最后登录IP</th>
                            <th w_index="ToVoidNo" w_render="crearViewButton" width="15%">修改</th>
                        </tr>
                    </table>
                </div>
            </div>
            @*修改*@
            <div class="modal fade bs-example-modal-sm" id="Updatamodal">
                <div class="modal-dialog" style="width:700px;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title">修改用户登录信息</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <form class="form-horizontal" method="post" id="Updatafrom">
                                    <input name="UserLoginDetailID" hidden />
                                    <div class="form-group form-group-lg">
                                        <label class="col-sm-4 control-label">用户名：</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" type="text" name="UserName" id="Usernameid" readonly="readonly">
                                        </div>
                                    </div>
                                    <div class="form-group form-group-lg">
                                        <label class="col-sm-4 control-label">邮箱：</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" type="text" name="PostBox" id="PostBoxid">
                                        </div>
                                    </div>
                                    <div class="form-group form-group-lg">
                                        <label class="col-md-4 col-sm-4 control-label">登录次数：</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" type="text" id="LoginFrequencyid" name="LoginFrequency">

                                        </div>
                                    </div>
                                    <div class="form-group form-group-lg">
                                        <label class="col-sm-4 control-label">注册时间：</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" type="text" name="StrRegisterTime" id="StrRegisterTimeid">
                                        </div>
                                    </div>
                                    <div class="form-group form-group-lg">
                                        <label class="col-sm-4 control-label">上次登录时间：</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" type="text" name="StrlastLoginTime" id="StrlastLoginTimeid">
                                        </div>
                                    </div>
                                    <div class="form-group form-group-lg">
                                        <label class="col-sm-4 control-label">最后登录时间：</label>
                                        <div class="col-sm-4">
                                            <input class="form-control" type="text" name="StrEndLoginTime" id="StrEndLoginTimeid">
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-info col-md-offset-5" id="QueRenupdata" style="margin-top:30px;">确认修改</button>
                                </form>
                            </div>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div>
        </div>
    </div>

    <script src="~/Content/bootstrap-3.3.7-dist/js/jquery-2.0.3.min.js"></script>
    <script src="~/Content/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script src="~/Content/jquery.bsgrid-1.37/merged/bsgrid.all.min.js"></script>
    <script src="~/Content/jquery.bsgrid-1.37/js/lang/grid.zh-CN.min.js"></script>
    <script src="~/Content/layer/layer.js"></script>
    <script src="~/Content/jss/customfunction.js"></script>
    <script>
        var Userlogintime;
        $(document).ready(function () {
            Userlogintime = $.fn.bsgrid.init('Userlogintime', {
                url: '/UserManagement/Usermanagement/UserLoginDetail',
                autoLoad: true,//自动加载数据
                stripeRows: true,//隔行变色
                rowHoverColor: true,//划过行变色
                rowSelectedColor: true,//是否显示选中行背景色
                pageSize: 10,//默认页面大小
                pageSizeSelect: true,//是否选择分页页数下拉框
                pagingLittleToolbar: true,//精简的图标按钮分页工具条
           }); pagingToolbarAlign: "left"//分页工具条的显示位置

            $("#Userlogintimeid").hide();
        });

        //权限访问
        $("#containerid").mouseenter(function () {
            $.post("/LoginMain/MoKuaiQuanXianOpTypeSelect", function (Data) {
                for (var i = 0; i < Data.length; i++) {
                    if (Data[i].Name == "用户列表" && Data[i].Optype == "查询") {
                        $("#Userlogintimeid").show();                      
                    }
                   
                    if (Data[i].Name == "用户列表" && Data[i].Optype == "修改") {

                        $(".stropenUpdata").removeClass("hidden");

                    }
                }
            });
        });

        //自定义公告详情列
        function crearViewButton(record, rowIndex, colIndex, options) {

            return '<button type="button" class="stropenUpdata btn btn-danger hidden" onclick="openUpdata(' + record.UserLoginDetailID + ')">修改</button>'

        }
        $("#btnSelect").click(function () {
            var UserNameID = $("#UserNameID").val();
            var PostBoxID = $("#PostBoxID").val();
            Userlogintime.search("UserNameID=" + UserNameID + "&PostBoxID=" + PostBoxID);
        });
        //正则表达式验证日期时间
        $("#StrRegisterTimeid").change(function () {
            var time = parseFloat($("#StrRegisterTimeid").val());
            var reg = new RegExp(/^[1-9]\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])\s+(20|21|22|23|[0-1]\d):[0-5]\d:[0-5]\d$/);
            var rg = reg.test(time);
            if (rg == false) {
                $("#StrRegisterTimeid").val("");
                layer.alert('时间格式不正确,正确格式为: 2014-01-01 12:00:00 ', { icon: 0, title: '提示' });
            }
        });
        //正则表达式验证日期时间
        $("#StrlastLoginTimeid").change(function () {
            var time = parseFloat($("#StrlastLoginTimeid").val());
            var reg = new RegExp(/^[1-9]\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])\s+(20|21|22|23|[0-1]\d):[0-5]\d:[0-5]\d$/);
            var rg = reg.test(time);
            if (rg == false) {
                $("#StrlastLoginTimeid").val("");
                layer.alert('时间格式不正确,正确格式为: 2014-01-01 12:00:00 ', { icon: 0, title: '提示' });
            }
        });
        //正则表达式验证日期时间
        $("#StrEndLoginTimeid").change(function () {
            var time = parseFloat($("#StrEndLoginTimeid").val());
            var reg = new RegExp(/^[1-9]\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[1-2][0-9]|3[0-1])\s+(20|21|22|23|[0-1]\d):[0-5]\d:[0-5]\d$/);
            var rg = reg.test(time);
            if (rg == false) {
                $("#StrEndLoginTimeid").val("");
                layer.alert('时间格式不正确,正确格式为: 2014-01-01 12:00:00 ', { icon: 0, title: '提示' });
            }
        });
        function openUpdata(UserLoginDetailID) {
            $.post("/UserManagement/Usermanagement/Userfrombiangding", { UserLoginDetailID: UserLoginDetailID }, function (data) {
                loadDatatoForm("Updatafrom", data);
            });
            $("#Updatamodal").modal("show");
        }

        $("#QueRenupdata").click(function () {
            if ($('#Updatafrom [name="PostBox"]').val() != "" && $('#Updatafrom [name="LoginFrequency"]').val() != "" && $('#Updatafrom [name="StrRegisterTime"]').val() != "" && $('#Updatafrom [name="StrlastLoginTime"]').val() != "" && $('#Updatafrom [name="StrEndLoginTime"]').val() != "") {
                var fromarray = $("#Updatafrom").serializeArray();
                $.post("/UserManagement/Usermanagement/UpdataUSerxinxi", fromarray, function (data) {
                    if (data == "success") {
                        layer.alert('修改成功！', { icon: 1, title: '提示' });
                        Userlogintime.refreshPage();
                        $("#Updatamodal").modal("hide");//关闭 modal
                    } else {
                        layer.alert('修改失败！', { icon: 2, title: '提示' });
                    }
                });
            }
            else {
                layer.alert('请填写完整！', { icon: 6, title: '提示' });
            }
        });
    </script>
</body>
</html>
